<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>KidsBooksPage</servlet-name>
        <servlet-class>coreservlets.KidsBooksPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TechBooksPage</servlet-name>
        <servlet-class>coreservlets.TechBooksPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderPage</servlet-name>
        <servlet-class>coreservlets.OrderPage</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>KidsBooksPage</servlet-name>
        <url-pattern>/kids-books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TechBooksPage</servlet-name>
        <url-pattern>/tech-books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderPage</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
